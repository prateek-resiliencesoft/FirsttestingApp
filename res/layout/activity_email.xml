<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.demo.EmailActivity" >

            <EditText
                android:id="@+id/edemailSubject"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/edemialmessage"
                android:layout_below="@+id/edEmailAddress"
                android:layout_marginTop="21dp"
                android:background="@drawable/blankbox"
                android:ems="10"
                android:gravity="left|center"
                android:hint="Subject"
                android:inputType="text"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/edemialmessage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edemailSubject"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:background="@drawable/blankbox"
                android:ems="10"
                android:gravity="left|center"
                android:hint="message"
                android:inputType="text"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/edEmailAddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:background="@drawable/blankbox"
                android:ems="10"
                android:gravity="left|center"
                android:hint="to"
                android:inputType="textEmailAddress"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btnSendmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edemialmessage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="42dp"
                android:text="Button"
                tools:ignore="HardcodedText" />

</RelativeLayout>
